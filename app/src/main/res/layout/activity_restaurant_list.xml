<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E3E3"
    tools:context=".RestaurantList">

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="700dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        app:cardBackgroundColor="#E7E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cardResLit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="Restaurants List"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="30sp"
                android:textStyle="italic" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp">

            <ImageView
                android:id="@+id/imageViewAink"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="150dp"
                app:srcCompat="@drawable/aink" />

            <Button
                android:id="@+id/ainkbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#2196F3"
                android:text="SHOW" />

            <TextView
                android:id="@+id/textViewAink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="MR.INK Bubble Milk Tea"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAkitti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="188dp">

            <ImageView
                android:id="@+id/imageViewAkitti"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="150dp"
                app:srcCompat="@drawable/akitti" />

            <Button
                android:id="@+id/akittibtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="66dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#2196F3"
                android:text="SHOW" />

            <TextView
                android:id="@+id/textViewAkitti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="KittiDuck Noodle"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardApalai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="308dp">

            <ImageView
                android:id="@+id/imageViewApalai"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="150dp"
                app:srcCompat="@drawable/apalai" />

            <Button
                android:id="@+id/apalaibtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="66dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#2196F3"
                android:text="SHOW" />

            <TextView
                android:id="@+id/textViewApalai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="PaLai Seafood"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardArim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="428dp">

            <ImageView
                android:id="@+id/imageViewArim"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="150dp"
                app:srcCompat="@drawable/arim" />

            <Button
                android:id="@+id/arimbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="67dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#2196F3"
                android:text="SHOW" />

            <TextView
                android:id="@+id/textViewArim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="Sweet Lamoon"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAsala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="548dp">

            <ImageView
                android:id="@+id/imageViewAsala"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="150dp"
                app:srcCompat="@drawable/asara" />

            <Button
                android:id="@+id/asalabtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="68dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#2196F3"
                android:text="SHOW" />

            <TextView
                android:id="@+id/textViewAsala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="235dp"
                android:layout_marginRight="15dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:selectAllOnFocus="false"
                android:text="SalaLoi Seafood"
                android:textColor="@android:color/widget_edittext_dark"
                android:textSize="19sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>